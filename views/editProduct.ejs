<%- include('partials/head.ejs') %>
<head>
  <link rel="stylesheet" href="/css/formProduct.css" />
</head>
<body>
  <%- include('partials/header.ejs') %>
  <main>
    <h1>EDITANDO <%= products[productId].name %></h1>
    <form
      action="/products/editar/<%= products[productId].id %>?_method=PUT"
      method="post"
      class="flex-container"
      enctype="multipart/form-data"
    >
      <input
        type="text"
        placeholder="Products name"
        name="name"
        class="input-text"
      />
      <br />
      <input
        type="text"
        placeholder="Description"
        name="description"
        class="input-text"
      />
      <br />

      <input type="file" name="productImage" />
      <br />
      <label for="categoria">Categor√≠a</label>
      <div class="categoria-checkbox">
        <label for="1">categoria 1</label>
        <input type="checkbox" name="categoria" id="1" />
        <label for="1">categoria 2</label>
        <input type="checkbox" name="categoria" id="2" />
        <label for="1">categoria 3</label>
        <input type="checkbox" name="categoria" id="3" />
        <label for="1">categoria 4</label>
        <input type="checkbox" name="categoria" id="4" />
      </div>
      <br />
      <label for="talla">Talla</label>
      <select name="talla" id="talla">
        <% for (let i = 35; i <= 42; i++) { %>
        <option value="<%= i %> "><%= i %></option>
        <% } %>
      </select>
      <label for="precio">Precio $</label>
      <input type="number" name="precio" id="precio" class="input-text" /><br />
      <input type="submit" value="Editar" />
    </form>
  </main>
</body>
