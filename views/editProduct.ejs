<%- include('partials/head.ejs') %>
<head>
  <link rel="stylesheet" href="/css/formProduct.css" />
</head>
<body>
  <%- include('partials/header.ejs') %>
  <main>
    <h1>EDITANDO <%= products.nombre %></h1>
    <form
      action="/products/editar/<%= products.idproducto %>?_method=PUT"
      method="post"
      class="flex-container"
      enctype="multipart/form-data"
    >
      <br />
      <input type="text" placeholder="name" name="name" class="input-text" />
      <br />
      <input
        type="text"
        placeholder="Description"
        name="description"
        class="input-text"
      />
      <br />

      <label for="productImage">Im√°gen de producto</label>
      <input type="file" name="productImage" id="productImage" />

      <br />

      <label for="calzado">Tipo Calzado</label>
      <select name="calzado" id="calzado">
        <% for (let i = 0; i < tipoCalzado.length; i++) { %>
        <option value="<%= tipoCalzado[i].idtipo_calzado %> ">
          <%= tipoCalzado[i].tipo_de_calzado %>
        </option>
        <% } %>
      </select>

      <label for="color">Color</label>
      <select name="color" id="color">
        <option value="Azul">Azul</option>
        <option value="Verde">Verde</option>
        <option value="Blanco">Blanco</option>
        <option value="Negro">Negro</option>
        <option value="Amarillo">Amarillo</option>
        <option value="Rojo">Rojo</option>
      </select>

      <label for="marca">Marca</label>
      <select name="marca" id="marca">
        <option value="9">Adidas</option>
        <option value="10">Nike</option>
      </select>

      <br />

      <label for="precio">Precio</label>
      <input type="number" name="precio" id="precio" class="input-text" />
      <br />

      <input type="submit" value="Crear" />
      <br />
    </form>
  </main>
</body>
