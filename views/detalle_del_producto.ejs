<%- include('partials/head.ejs') %>
<head>    <link rel="stylesheet" href="/css/detalle-del-producto.css" />
</head>

  <body>
    
<%- include('partials/header.ejs') %>
        <section>
            <div class="nombre-del-producto">
            <h3 class="nombre-del-producto"><%= products[productId].name %> </h3>
            </div>

        <div class="media_wrap">    
            <div class="imagen-producto">
            <img class="ver-producto" src="/images/our_products/<%= products[productId].image %> " alt="product-image">
        </div>
        <div>
            <article class="precio">Precio $<%= products[productId].precio %></article>
        </div>
    
            <form method="POST" action="/">
                
                <label for="talles" class="titulo_talles">Selecciona el Talle</label>
                
                <div class="div-input">
                    <% for(let i = 39; i<=44; i++) { %> 

                        <div class="talle">
                            <input type="radio" name="talle" class="opcion-talle" id=${´talle_<% i %>´}  >  
                            <label for="talle"><%= i %> </label>   <!--antes el for = "talles", se iguala con el id para unificar letras con circulo radio que esta con display none-->
                        </div>

                    <% } %>     

                </div>
            </form>

            <div class="truck">
                <i class="fas fa-shipping-fast"></i>
                <p class="entrega">Entrega rápida</p>
            </div>

                       
            <div class="calendario">
                <i class="fas fa-calendar-check"></i>
            </div>

            <div class="tarjetas"> 
                <i class="fab fa-cc-visa"></i>
                <i class="fab fa-cc-mastercard"></i>
                <i class="fab fa-cc-amex"></i>
                <i class="fab fa-cc-diners-club"></i>
            </div>

            <div class="buttons">
                <button type="submit" name="añadir" class="boton-agregar"><a href="#">Añadir al Carrito</a></button>
                <button type="submit" name="comprar"class="boton-comprar"><a href="#">Comprar Producto</a></button>
                <form action="/products/editar/<%= products[productId].id %>" method="GET">
                    <button type="submit" name="editar" class="boton-agregar">Editar este producto</button>
                </form>
                <form action="/products/borrar/<%= products[productId].id %>?_method=DELETE" method="POST">
                    <button type="submit" name="editar" class="boton-agregar">Borrar este producto</button>
                </form>
            </div>

            

            <div class="div-descripcion">
                <h3 class="descripcion">
                    Descripción del producto:  
                </h3>
                <p>
                    <%= products[productId].description %>
                </p>
            </div>

        </div>

        <div>


        </div>

        </section>    

    <%- include('partials/footer') %>

    
</body>

</html>