<%- include('partials/head.ejs') %>
<head>    <link rel="stylesheet" href="/css/register-styles.css" />
</head>

  <body>
    
<%- include('partials/header.ejs') %>

      <main>
          <h2>Crea tu cuenta!</h2>
          <h3>Registro</h3>

        <div class="contenedor-form">
          <form action="register" method="POST" enctype="multipart/form-data" class="form-register">
              <div class="input-field">
                  <label for="nombre">Nombre</label>
                  <input type="text" name="nombre" id="nombre">
                  <% if (locals.errors && errors.nombre) { %>
                    <p class="text-danger">
                      <%= errors.nombre.msg %> 
                    </p>
                   
                  <% } %>
              </div>
              <div class="input-field">
                  <label for="email">Email</label>  
                  <input type="email" name="email" id="email">
                  <% if (locals.errors && errors.email) { %>
                    <p class="text-danger">
                      <%= errors.email.msg %> 
                    </p>
                   
                  <% } %>
              </div>
              <div class="input-field">
                  <label for="password">Password</label>
                  <input type="password" name="password" id="password">  
                  <% if (locals.errors && errors.password) { %>
                    <p class="text-danger">
                      <%= errors.password.msg %> 
                    </p>
                   
                  <% } %>
              </div>
              <div class="input-field">
                <label for="profileImage">Profile image</label>
                <input type="file" name="profileImage" id="profileImage">
             
            </div>
              <div class="text-margin-enviar">
                  <button type="submit">Registrarse</button>
              </div>
              
              
            </div>         
            </form>

          <div class="contenedor-form">
          <form action="/login" method="get" class="login-redirect">
            <h4>Ya tenés cuenta? Ingresá con tu usuario!</h4>
            <button type="submit">Ingresar</button>
          </form>  
        </div>        
      </main>
      
      <%- include('partials/footer') %>
      
</body>
</html>